<xs:schema targetNamespace="http://www.wasp.com/schemas/wasp"
           attributeFormDefault="unqualified"
           elementFormDefault="qualified"
           xmlns="http://www.wasp.com/schemas/wasp"
           xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="wasp" type="waspType"/>

  <xs:complexType name="waspType">
    <xs:sequence>
      <xs:element type="controller-Type" name="controller" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

    <xs:complexType name="request-mappingType">
        <xs:attribute type="xs:string" name="resource" use="required"/>
        <xs:attribute type="xs:string" name="method" use="required"/>
        <xs:attribute type="xs:string" name="callback" use="required"/>
  </xs:complexType>

    <xs:complexType name="controller-Type">
        <xs:sequence>
            <xs:element type="request-mappingType" name="request-mapping" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute type="xs:ID" name="class" use="required"/>
    </xs:complexType>

</xs:schema>
